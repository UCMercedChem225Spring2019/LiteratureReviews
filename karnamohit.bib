@article{Chan:2011a,
author = {Chan, Bun and Deng, Jia and Radom, Leo},
title = {G4(MP2)-6X: A Cost-Effective Improvement to G4(MP2)},
journal = {Journal of Chemical Theory and Computation},
volume = {7},
number = {1},
pages = {112-120},
year = {2011},
doi = {10.1021/ct100542x},
annote = {This paper proposes parametrization of the G4(MP2) procedure, introducing six scaling factors for the additive correlation-correction terms. This parametrization is based on the differently scaled same-spin and opposite-spin contributions to the MP2 correlation energy (SCS-MP2 method). Further, CCSD correlation-correction and the perturbative triples (T) correlation-correction is scaled differently as well. Such parametrization hopes to mitigate errors in energies where the contribution from the HLC term is not large. Testing the proposed G4(MP2)-6X composite scheme, with a computational cost similar to that of G4(MP2) procedure, shows that this procedure performs better than G4(MP2), approaching G4 accuracy, at a fraction of G4 method's computational cost.}
keywords = {G4(MP2)-6x; composite methods; G4(MP2); G4; G2 dataset},
}

@article{Pople:1971a,
author = {Pople, J. A.},
title = {Electronic states and wave functions associated with orbital energy crossing},
journal = {International Journal of Quantum Chemistry},
volume = {5},
number = {S5},
pages = {175-182},
doi = {10.1002/qua.560050823},
year = {1971}
annote = {The paper addresses an important problem involving occupation of nearly degenerate molecular orbitals or different symmetries, and discusses the stability of the solutions for the wave function near orbital energy crossing region for a simple 2-electron, 2-orbital model, with an effective core Hamiltonian. Such a problem, by nature, is a multireference problem, and the author highlights this by plotting an energy parameter which reflects the delocalization of electrons within the system against the energy of the electronic states; it turns out that the CI method, which takes into account different configurations, is qualitatively well-behaved, as should be expected given that the CI wave function used accounts for the multireference character to some extent. However, the use of complex functions as orbitals allows for the same qualitative behavior, but from the single reference point of view, the author concludes. Symmetry considerations seemingly discourage their use in some cases, however.},
keywords = {orbital crossing; configuration interaction; single reference; complex orbitals; near-degeneracy},
}

@article{Radom:1996a,
