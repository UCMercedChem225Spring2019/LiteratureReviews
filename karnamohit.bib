number = {41},
pages = {16502-16513},
year = {1996},
doi = {10.1021/jp960976r},
annote = {This work includes a wide benchmark study of frequency scaling factors, determined with respect to particular molecular properties. The extensive study on relatively moderately large molecules compares frequency calculations and frequency scaling factors using different methods like Hartree-Fock, DFT, MP2-fu, MP2-fc and QCISD-fc combined with different basis sets. It highlights the importance of low frequencies to thermodynamic quantities. Its findings reveal that, on an average, for relatively low computational cost, DFT methods based on the B3-exchange functional give excellent agreement with the experimental data for the test molecules in terms of low RMS errors and minimally scaling factors.},
keywords = {fundamental frequency; harmonic approximation; frequency scaling factor; anharmonicity; B3-exchange functional},
}

@article{Hoffmann:2003bg,
  author = {Hoffmann, Roald and Shaik, Sason and Hiberty, Philippe C},
  title = {{A Conversation on VB vs MO Theory:~ A Never-Ending Rivalry?}},
  journal = {Accounts Of Chemical Research},
  year = {2003},
  volume = {36},
  number = {10},
  pages = {750--756},
  doi = {10.1021/ar030162a},
  annote = {In this exchange, the participants of the conversation discuss the proliferation of the MO theory versus that of the VB theory. Ideologically an ideal theory for the chemists, the VB theory was perceived less popular than the MO theory, which seemed successful only due to perceived failures of the VB theory. One of the participants, Roald Hoffmann, speculates that it may be because of less adventurous predictions by the VB theory community, contrary to those made by the MO community. They agree that VB and MO theories are in principle two representations of the same phenomena, and that some of them may be easy to describe in the VB pciture, and others in the MO picture. The discussion ends by concluding that what is seemingly a rivalry could in fact help chemists solve problems with suitable tools borrowed from either concepts, taking two differing perspectives of electron activity to represent a complete chemical picture.},
  keywords = {valence bond theory; molecular orbital theory; localized orbitals, delocalization; chemical bond; electronic structure},
}

